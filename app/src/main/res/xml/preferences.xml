<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notifications_pref_header">

        <SwitchPreferenceCompat
            app:key="@string/notifications_pref_key"
            app:title="@string/notifications_pref_title"
            app:summary="@string/notifications_pref_summary"
            app:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme_pref_header">

        <ListPreference
            app:key="@string/theme_pref_key"
            app:title="@string/theme_pref_title"
            app:dialogTitle="@string/theme_pref_dialog_msg"
            app:entries="@array/theme_pref_entries"
            app:entryValues="@array/theme_pref_values"
            app:defaultValue="@string/theme_pref_entry_night_auto"
            app:summary="@string/theme_pref_summary"/>

    </PreferenceCategory>

</PreferenceScreen>