<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="statsViewModel"
            type="com.ang.acb.todolearn.ui.statistics.StatisticsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statistics_no_tasks"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="@{statsViewModel.empty ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/stats_active_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_mini"
            android:text="@{@string/statistics_active_tasks(statsViewModel.activeTasksPercent)}"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="@{statsViewModel.empty ? View.GONE : View.VISIBLE}"
            tools:text="Active tasks: 50%"/>

        <TextView
            android:id="@+id/stats_completed_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_mini"
            android:text="@{@string/statistics_completed_tasks(statsViewModel.completedTasksPercent)}"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="@{statsViewModel.empty ? View.GONE : View.VISIBLE}"
            tools:text="Completed tasks: 50%"/>

    </LinearLayout>

</layout>